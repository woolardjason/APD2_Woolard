<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView_reset_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10sp"
        android:gravity="center"
        android:text="What was the email address you used when signing up?" />

    <EditText
        android:id="@+id/editText_reset_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textSize="14sp"
        android:inputType="textEmailAddress"
        android:hint="Email Address" />

    <Button
        android:id="@+id/button_reset_pw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Request Password Reset Link"
		android:textSize="13sp"/>

</LinearLayout>
