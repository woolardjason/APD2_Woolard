<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_listview_cell"
    android:padding="10sp"
    android:orientation="vertical" >

    
     <TextView
         android:id="@+id/textView_listView_localSalesSubject"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_centerVertical="true"
         android:gravity="center_vertical"
         android:textColor="#000000"
         android:textSize="18sp"
         android:textStyle="bold" />
      <TextView
         android:id="@+id/textView_listView_localSalesDescription"
         android:layout_width="210sp"
         android:layout_marginTop="5sp"
         android:lines="1"
         android:layout_height="wrap_content"
         android:layout_below="@+id/textView_listView_localSalesSubject"
         android:textColor="#6B6B6B"
         android:textSize="11sp"
         />
    
     <TextView
         android:id="@+id/textView_listView_localSalesPrice"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentRight="true"
         android:layout_centerVertical="true"
         android:gravity="center_vertical"
         android:textColor="#216C2A"
         android:textSize="14sp"
         android:textStyle="bold" />

</RelativeLayout>
